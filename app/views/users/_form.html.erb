<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :first_name %>
  <%= f.text_field :name, class: 'form-control', placeholder: 'First Name' %>

  <%= f.label :last_name %>
  <%= f.text_field :surname, class: 'form-control', placeholder: 'Last Name' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>

  <%= f.label :role %>
  <%= f.select :role , ['Batsmen', 'Bowler', 'Wicketkeeper', 'All Rounder'], {}, class: 'form-control' %>

  <%= f.label :bats %>
  <%= f.select :bats , ['Left', 'Right'], {}, class: 'form-control' %>

  <%= f.label :bowls %>
  <%= f.select :bowls , ['Left', 'Right'], {}, class: 'form-control' %>

  <%= f.submit yield(:button_text), class:'btn btn-primary' %>
<% end %>
