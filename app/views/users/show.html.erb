<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% if admin_logged_in? %>
  <%= render 'admin_buttons' %>
<% end %>
