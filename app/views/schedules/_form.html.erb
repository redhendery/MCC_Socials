<%= form_for(@schedule) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>

  <%= f.label :opponent %>
  <%= f.text_field :opponent, class: 'form-control' %>

  <%= f.label :Series_Game %>
  <%= f.text_field :series_game, class: 'form-control' %>

  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %>

  <%= f.submit yield(:button_text), class:'btn btn-primary' %>

  <% if admin_logged_in? %>
    <%= hidden_field_tag 'schedule[user_ids][]', nil %>
    <% @schedule.users.each do |user| %>
      <%= check_box_tag 'schedule[user_ids][]', user.id, @schedule.user_ids.include?(user.id), id: dom_id(user) %>
      <%= label_tag dom_id(user), user.name %>
    <% end %>
  </ul>
  <%= submit_tag 'Save Lineup', class: 'btn btn-primary', data: { confirm: 'Confirm lineup?' } %>
  <% end %>

<% end %>
