<% provide(:title, 'All Games') %>
<div class="row">
  <% @schedules.each do |schedule| %>
    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
      <%= render schedule %>
    </div>
  <% end %>
</div>

<% if logged_in? && current_user.admin? %>
  <%= link_to 'Add Game', new_schedule_path, class: 'btn btn-lg btn-primary' %>
<% end %>
