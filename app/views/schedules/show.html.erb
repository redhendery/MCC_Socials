<% provide(:title, @schedule.opponent) %>

<h1>Game Information</h1>
<ul>
  <li><%= @schedule.date %></li>
  <li><%= @schedule.opponent %></li>
  <li>Game <%= @schedule.series_game %></li>
  <li><%= @schedule.location %></li>
</ul>

<% if logged_in? %>
  <% if @available %>
    <%= link_to 'Withdraw from Selection', unavailable_schedule_path(@schedule), class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Sign Up for Selection', available_schedule_path(@schedule), class: 'btn btn-success' %>
  <% end %>
<% end %>
