<%= form_for @contact, url: contact_index_path, remote: true do |f| %>
<div class="form-group row justify-content-center">
  <div class="col-lg-4">
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field  :name, required: true, class: 'form-control', placeholder: 'Your Name' %>

      <%= f.label :email %>
      <%= f.text_field :email, required: true, class: 'form-control', placeholder: 'Your Email Address' %>

      <%= f.label :phone %>
      <%= f.text_field :phone, required: true, class: 'form-control', placeholder: 'Your Phone Number' %>

    <%= f.label :message %>
    <%= f.text_area :message, rows: 8, cols: 40, required: true,
      class: 'form-control', placeholder: 'Your message for the Marin Cricket Club' %>

    <%= f.submit 'Send Message', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
