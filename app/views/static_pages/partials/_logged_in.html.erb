<div class="row justify-content-around">

  <% unless @upcoming.empty? %>
    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
      <h1>This Week</h1>
      <% @upcoming.each do |schedule| %>
        <%= render schedule %>
      <% end %>
    </div>
  <% end %>
  
  <% unless @previous.empty? %>
    <% @previous.each do |schedule| %>
      <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
        <h1>Last Week</h1>
        <%= render schedule %>
      </div>
    <% end %>
  <% end %>

</div>
