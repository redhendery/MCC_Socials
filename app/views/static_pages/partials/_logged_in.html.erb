<% if @upcoming.empty? %>
  <h3>There are no games this weekend.</h3>
<% else %>
  <h1>Upcoming Games</h1>
  <div class="row justify-content-around">
    <% @upcoming.each do |schedule| %>
      <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
        <%= render schedule %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @previous.empty? %>
  <h3>There were no games last weekend.</h3>
<% else %>
  <h1>Previous Games</h1>
  <div class="row justify-content-around">
    <% @previous.each do |schedule| %>
      <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
        <%= render schedule %>
      </div>
    <% end %>
  </div>
<% end %>
